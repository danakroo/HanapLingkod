{
  "expo": {
    "name": "HanapLingkod",
    "slug": "hanaplingkod",
    "version": "1.0.5",
    "orientation": "portrait",
    "icon": "./assets/logo/hanaplingkod_icon_2.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/logo/hanaplingkod_iconfull.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo/hanaplingkod_icon_2.png",
        "backgroundColor": "#FFFFFF"
      },
      "useNextNotificationsApi": true,
      "permissions": [
        "android.permissoin.READ_EXTERNAL_STORAGE"
      ],
      "package": "com.team4g.hanaplingkod",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/logo/hanaplingkod_icon_2.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The HanapLingkod app accesses your photos to let you upload required IDs and update your profile picture.",
          "savePhotosPermission": "Allow Hanaplingkod to save photos"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/logo/hanaplingkod_icon_2.png",
          "color": "#2080ff",
          "sounds": []
        }
      ],
      "@react-native-firebase/app"
    ],
    "extra": {
      "eas": {
        "projectId": "8be07aa2-6f64-43dd-b0ac-d4a17c86a5a0"
      }
    }
  }
}
